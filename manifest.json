
{
  "name": "CaseChanger",
  "description": "Converts text to snake_case or camelCase in Chrome",
  "version": "1.1",
  "manifest_version": 2,

  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "convert_to_camel_case": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Convert selected text to CamelCase"
    }
  }





}
