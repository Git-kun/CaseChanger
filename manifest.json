
{
  "name": "CaseChanger",
  "description": "Converts text to snake_case or camelCase in Chrome",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"],

  "commands": {
    "convert-snake-case": {
      "shortcut": "shift+S",
      "description": "Convert selected text to snake_case"
    },
    "convert-camel-case": {
      "shortcut": "shift+C",
      "description": "Convert selected text to camelCase"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
