
{
  "name": "CaseChanger",
  "description": "Converts text to snake_case or camelCase in Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "contextMenus", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  


  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "convert-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Convert selected text"
    }
  }

  




}
