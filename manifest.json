
{
  "name": "CaseChanger",
  "description": "Chromeでテキストをスネークケースやキャメルケースなどに変換",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },


  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open the popup."
    }
  }
}
