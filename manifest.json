
{
  "name": "CaseChanger",
  "description": "Converts text to snake_case or camelCase in Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  

  "permissions": ["activeTab", "contextMenus"],

  "background.service_worker": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "convert-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Convert selected text"
    }
  }





}
