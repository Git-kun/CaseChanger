
{
  "name": "CaseChanger",
  "description": "Converts text to snake_case or camelCase in Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "convert-snake-case": {
      "suggested_key": {
        "default": "Cmd+Shift+S"
      },
      "description": "Convert selected text to snake_case"
    },
    "convert-camel-case": {
      "suggested_key": {
        "default": "Cmd+Shift+C"
      },
      "description": "Convert selected text to camelCase"
    }
  }
}
